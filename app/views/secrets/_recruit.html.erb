<%= link_to recruit_path(recruit) do %>

  <div class="list-rst__body">
    <div class="list-rst__contents">

      <div class="list-rst__user">
        <%= render 'users/user_info', recruit: recruit %>
      </div>

      <div class="list-rst__summary">
        <h3 class="list-rst__title"><%= recruit.title %></h3>
        <div class="list-rst__tags">
          <i class="fa-solid fa-tag"></i>
          <% recruit.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        </div>
        <div class="list-rst__explain"><%= recruit.explain %></div>
      </div>

      <div class="border-line"></div>

      <div class="list-rst__timeline">
        <%= render 'shared/timeline', recruit: recruit %>
      </div>
    </div>

    <div class="list-rst__photo-frame">
      <div class="list-rst__photo-main">
        <% if recruit.images.attached? %>
          <%= image_tag recruit.images.first %>
      </div>
      <ul class="list-rst__photo-list">
        <% recruit.images[1..3].each do |image, i| %>
          <li class="list-rst__photo-item"><%= image_tag image %></li>
        <% end %>
      </ul>
        <% end %>
    </div>
  </div>

<% end %>