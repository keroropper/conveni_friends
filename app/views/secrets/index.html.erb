<%= render 'shared/header' %>

<div class="container">
  <div class="rstlist-contents">  
    <div class="flexible-rstlst">

      <%= render 'shared/sidebar' %>

      <div class="flexible-rstlst-main">
        <div class="page-count">
          <span class="page-count__num"><strong><%= "最小" %></strong></span>～<span class="page-count__num">
          <strong><%= "最大" %></strong></span> 件を表示<span class="page-count__line">／</span>
          全 <span class="page-count__num"><strong><%= @recruits.count %></strong></span> 件
        </div>
        <div class="list-rst__wrap">
          <%= render partial: 'recruit', collection: @recruits, as: :recruit %>
        </div>
        <div class="list-pagination">
        </div>
      </div>

    </div>
  </div>

  <div class="rst-footer">
  </div>

</div>
