<header class="header">
  <div class="list-sidebar__content">
    <div class="header-top">
      <div class="header-top-contents">
        <% unless current_user %>
          <%= link_to "新規登録", "#" %>
          <%= link_to "ログイン", "#" %>
        <% else %>
          <%= link_to 'マイページ', user_path(current_user)  %>  
          <%= link_to user_notifications_path(current_user) do %>  
            <% count = current_user.notifications.where(read: false).count %>
              <% if count != 0%>
                <div class="unread-notification-count">
                  <span><%= count %></span>
                </div>
              <% end %>
            <i class="fa-solid fa-bell"></i>
          <% end %>
          <%= link_to '投稿する', "#" %>  
        <% end %>
      </div>
    </div>
  </div>
  <div class="header-search">
    <div class="header-fixed">
      <p class="header-logo">
        <%= link_to '刹那フレンド', root_path %>
      </p>
      <div class="search-suggest">
        <div class="form">
          <span>エリア</span>
          <span>キーワード</span>
          <span>ジャンル</span>
          <span>日付</span>
          <span>時間帯</span>
          <div>
            <span>所要時間</span>
            <span>性別</span>
            <span>年齢</span>
            <span>評価</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>