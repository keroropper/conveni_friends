<%= render 'shared/header' %>

<div class="container">
  <div class="applicants__container">
    <div class="applicant-users__container">
      <%= link_to recruit_path(@recruit) do %>
        <div class="applicant-recruit__block">
          <div class="applicant-recruit__image">
            <%= image_tag @recruit.images.first %>
          </div>
            <h1 class="applicant-recruit__title">
              <%= @recruit.title %>
            </h1>
        </div>
      <% end %>
      <h2>応募者（<%= @count %>名）</h2>
      <% if @users.present? %>
        <div class="applicant-users__block">
          <% @users.each do |user| %>
            <%= link_to user_path(user, recruit_id: @recruit.id) do %>
              <%= render 'users/profile_photo', user: user %>
            <% end %>
          <% end %>
        </div>
        <%= paginate @users %>
      <% else %>
        <div class="applicant-guest">
          <span>応募者はいません。</span>
        </div>
      <% end %>
    </div>
  </div>

</div>