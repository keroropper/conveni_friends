<div class="auth-wrapper info">
  <div class="auth-item info">

    <div class="auth-title info">
      <h1><%= t('.info') %></h1>
    </div>
    <p class='confirmation-info'><%= t('.confirmation_period',
              period: Devise.confirm_within / 60) %></p>
    <div id="auth_page-link">
      <%= link_to t('.didn_t_receive_confirmation_instructions'), new_confirmation_path(resource_name, email: @email) %><br />
    </div>
  </div>
</div>