<div class="auth-wrapper">
  <div class="auth-item">

    <div class="auth-title">
      <h1><%= t('.change_your_password') %></h1>
    </div>

    <%= render 'devise/shared/error_messages', attr: :reset_password_token %>

    <div class="auth-data">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <%= render 'devise/shared/password_form', f: f %>

        <div class="password-field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          <%= render 'devise/shared/error_messages', attr: :password_confirmation %>
        </div>

        <div class="actions">
          <%= f.submit t('.change_my_password') %>
        </div>
      <% end %>
    </div>
  </div>
</div>

